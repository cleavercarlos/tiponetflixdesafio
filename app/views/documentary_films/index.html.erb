<h1>Documentary Films</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Synopsis</th>
      <th>Director</th>
    </tr>
  </thead>
  <tbody>
    <% @documentary_films.each do |documentary_film| %>
      <tr>
        <td><%= documentary_film.name %></td>
        <td><%= documentary_film.synopsis %></td>
        <td><%= documentary_film.director %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Documentary', new_documentary_film_path %>

